<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black"
    >

    <EditText
        android:id="@+id/edtxt"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:minHeight="300dp"
        android:textSize="30sp"
        android:padding="20dp"
        android:textColor="@color/white"
        android:gravity="bottom|right"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnDot"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck">
    </EditText>

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/black"
        android:src="@mipmap/ic_back1_foreground"
        android:textColor="@color/orange"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btnThree"
        app:layout_constraintLeft_toLeftOf="@id/btnThree"
        app:layout_constraintRight_toRightOf="@id/btnThree"
        app:layout_constraintTop_toBottomOf="@id/edtxt"
        tools:ignore="SpeakableTextPresentCheck"></ImageButton>

    <ImageButton
        android:id="@+id/btnSQ"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/black"
        android:src="@mipmap/ic_sq_foreground"
        android:textColor="@color/orange"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btnTwo"
        app:layout_constraintLeft_toLeftOf="@id/btnTwo"
        app:layout_constraintRight_toRightOf="@id/btnTwo"
        app:layout_constraintTop_toBottomOf="@id/edtxt"
        tools:ignore="SpeakableTextPresentCheck"></ImageButton>

    <Button
        android:id="@+id/btnOne"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/black"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btnFour"
        app:layout_constraintLeft_toLeftOf="@id/btnDot"
        app:layout_constraintRight_toLeftOf="@id/btnTwo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnDot"></Button>

    <Button
        android:id="@+id/btnTwo"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/black"
        android:text="2"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btnFour"
        app:layout_constraintLeft_toRightOf="@id/btnOne"
        app:layout_constraintRight_toLeftOf="@id/btnThree"
        app:layout_constraintTop_toBottomOf="@id/btnDot"></Button>

    <Button
        android:id="@+id/btnThree"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/black"
        android:text="3"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btnFour"
        app:layout_constraintLeft_toRightOf="@id/btnTwo"
        app:layout_constraintRight_toLeftOf="@id/btnPlus"
        app:layout_constraintTop_toBottomOf="@id/btnDot"></Button>

    <Button
        app:layout_constraintBottom_toTopOf="@+id/btnFour"
        android:id="@+id/btnPlus"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/black"
        android:text="+"
        android:textColor="@color/orange"
        android:textSize="25sp"
        app:layout_constraintLeft_toRightOf="@id/btnThree"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnDot"></Button>

    <Button
        android:id="@+id/btnFour"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/black"
        android:text="4"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btnSeven"
        app:layout_constraintRight_toLeftOf="@id/btnTwo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnOne"></Button>

    <Button
        android:id="@+id/btnFive"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/black"
        android:text="5"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btnSeven"
        app:layout_constraintLeft_toRightOf="@id/btnOne"
        app:layout_constraintRight_toLeftOf="@id/btnThree"
        app:layout_constraintTop_toBottomOf="@id/btnTwo"></Button>

    <Button

        android:id="@+id/btnSix"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/black"
        android:text="6"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btnSeven"
        app:layout_constraintLeft_toRightOf="@id/btnTwo"
        app:layout_constraintRight_toLeftOf="@id/btnPlus"
        app:layout_constraintTop_toBottomOf="@id/btnThree"></Button>
    <Button

        app:layout_constraintBottom_toTopOf="@+id/btnSeven"
        android:id="@+id/btnMinus"
        android:text="-"
        android:textColor="@color/orange"
        android:backgroundTint="@color/black"
        android:textSize="30sp"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/btnPlus"
        app:layout_constraintLeft_toRightOf="@id/btnThree"
        app:layout_constraintRight_toRightOf="parent"
        >
    </Button>

    <Button
        android:id="@+id/btnSeven"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/black"
        android:text="7"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btnDiv"
        app:layout_constraintRight_toLeftOf="@id/btnTwo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnFour"></Button>

    <Button
        android:id="@+id/btnEight"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/black"
        android:text="8"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btnDiv"
        app:layout_constraintLeft_toRightOf="@id/btnOne"
        app:layout_constraintRight_toLeftOf="@id/btnThree"
        app:layout_constraintTop_toBottomOf="@id/btnFive"></Button>

    <Button
        android:id="@+id/btnZero"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/black"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btnDiv"
        app:layout_constraintRight_toLeftOf="@id/btnMul"></Button>


    <Button
        android:id="@+id/btnNine"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/black"
        android:text="9"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btnMul"
        app:layout_constraintLeft_toRightOf="@id/btnTwo"
        app:layout_constraintRight_toLeftOf="@id/btnPlus"
        app:layout_constraintTop_toBottomOf="@id/btnSix"></Button>

    <Button
        android:id="@+id/btnMul"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/black"
        android:text="*"
        android:textColor="@color/orange"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnNine"
        app:layout_constraintLeft_toRightOf="@id/btnThree"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnEight"></Button>

    <Button
        android:id="@+id/btnDot"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/black"
        android:text="."
        android:textColor="@color/orange"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btnOne"
        app:layout_constraintEnd_toStartOf="@+id/btnSQ"
        app:layout_constraintRight_toRightOf="@id/btnOne"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtxt"></Button>

    <Button
        android:id="@+id/btnEqual"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/black"
        android:text="="
        android:textColor="@color/orange"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btnNine"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnMinus"></Button>

    <Button
        android:id="@+id/btnAC"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/black"
        android:text="AC"
        android:textColor="@color/orange"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btnPlus"
        app:layout_constraintLeft_toLeftOf="@id/btnPlus"
        app:layout_constraintRight_toRightOf="@id/btnPlus"
        app:layout_constraintTop_toBottomOf="@id/edtxt"></Button>

    <Button
        android:id="@+id/btnDiv"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/black"
        android:text="/"
        android:textColor="@color/orange"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnSeven"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"></Button>
</androidx.constraintlayout.widget.ConstraintLayout>